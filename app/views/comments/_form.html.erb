
<%=form_for ([@noticium, @noticium.comments.build]) do |f|%>

  <div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre, required: true %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<%end%>
